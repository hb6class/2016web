<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>mvc04</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

	<servlet>
		<servlet-name>list</servlet-name>
		<servlet-class>com.mvc2.controller.ListController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addform</servlet-name>
		<servlet-class>com.mvc2.controller.AddController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>insert</servlet-name>
		<servlet-class>com.mvc2.controller.InsertController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>one</servlet-name>
		<servlet-class>com.mvc2.controller.OneController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>edit</servlet-name>
		<servlet-class>com.mvc2.controller.EditController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>update</servlet-name>
		<servlet-class>com.mvc2.controller.UpdateController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>list</servlet-name>
		<url-pattern>/guest/list.naver</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addform</servlet-name>
		<url-pattern>/guest/add.naver</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>insert</servlet-name>
		<url-pattern>/guest/insert.naver</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>one</servlet-name>
		<url-pattern>/guest/detail.naver</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>edit</servlet-name>
		<url-pattern>/guest/edit.naver</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>update</servlet-name>
		<url-pattern>/guest/update.naver</url-pattern>
	</servlet-mapping>
</web-app>